{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "."           // <-- include root files
  },
  "include": ["*.ts", "**/*.ts"],   // include root TS files and subfolders
  "exclude": ["node_modules", "dist"]
}
